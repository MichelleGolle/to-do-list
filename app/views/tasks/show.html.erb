<%= form_tag(list_tasks_completed_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
  </div>
<% end %>


<table class="table table-bordered">
  <thead>
    <tr>
      <th class="task-title">Title</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Tags</th>
    </tr>
  </thead>
  <tbody>

    <tr class="task"><% @complete_tasks.each do |task| %>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.due_date %></td>
      <td><% task.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
      </td>
      <td><%= link_to "Edit", edit_list_task_path(id: task.id) %></td>
    <% end %>



  </tbody>
</table>
</div>

</body>
</html>
