<%= bootstrap_form_for(@task, url: list_tasks_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f| %>

  <%= f.text_field :title %>
  <%= f.form_group do %>
    <%= f.check_box :completed %>
  <% end %>
  <%= f.text_field :description %>
  <%= f.date_field :due_date %>
  <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) %>
  <%= f.form_group do %>
    <%= f.submit "Submit"%>
  <% end %>
<% end %>
