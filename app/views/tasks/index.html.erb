<%= link_to "Add new task", new_list_task_path %>

<%= form_tag(list_tasks_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
  </div>
<% end %>

<div id="task-table">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
      <th>Tags</th>
    </tr>
  </thead>
  <tbody>

    <tr class="task"><% @incomplete_tasks.each do |task| %>
      <td class="task-title"><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.due_date %></td>
      <td><% task.tags.each do |tag| %>
            <%= tag.name %>
          <% end %>
      </td>
      <td><%= link_to "Edit", edit_list_task_path(id: task.id) %></td></tr>
    <% end %>



  </tbody>
</table>
</div>



<%= link_to "View completed tasks", list_tasks_completed_path %>
